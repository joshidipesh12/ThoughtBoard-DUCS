<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/about"
        android:theme="@style/Widget.AppCompat.Light.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/heading"
                android:layout_width="253dp"
                android:layout_height="51dp"
                android:layout_marginStart="62dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="25dp"
                android:text="@string/message_board"
                android:textAlignment="center"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.043" />

            <TextView
                android:id="@+id/department_subheading"
                android:layout_width="256dp"
                android:layout_height="55dp"
                android:layout_marginTop="1dp"
                android:text="@string/ducs"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heading"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="144dp"
                android:contentDescription="@string/todo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.443"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/app_logo"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/heart"
                android:layout_width="35dp"
                android:layout_height="32dp"
                android:layout_marginTop="90dp"
                android:contentDescription="@string/todo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/department_subheading"
                app:layout_constraintVertical_bias="0.001"
                app:srcCompat="@drawable/heart_vector" />

            <ImageView
                android:id="@+id/gdsc_logo"
                android:layout_width="96dp"
                android:layout_height="73dp"
                android:layout_marginTop="208dp"
                android:layout_marginEnd="35dp"
                android:contentDescription="@string/todo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.431"
                app:layout_constraintStart_toEndOf="@+id/heart"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/gdsc_logo" />

            <ImageView
                android:id="@+id/ducs_logo"
                android:layout_width="111dp"
                android:layout_height="93dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="200dp"
                android:contentDescription="@string/todo"
                app:layout_constraintEnd_toStartOf="@id/heart"
                app:layout_constraintHorizontal_bias="0.59"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ducs_logo" />

            <TextView
                android:id="@+id/department_subheading2"
                android:layout_width="190dp"
                android:layout_height="54dp"
                android:layout_marginTop="220dp"
                android:text="@string/made_with_love_by_ducs_developers"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heading" />

            <TextView
                android:id="@+id/department_subheading3"
                android:layout_width="303dp"
                android:layout_height="32dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="290dp"
                android:layout_marginEnd="40dp"
                android:text="@string/about_the_department"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heading" />

            <TextView
                android:id="@+id/department_subheading4"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="332dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="50dp"
                android:justificationMode="inter_word"
                android:text="@string/about_description"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heading"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/visit_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="@string/visit_ducs_website"
                android:textAlignment="center"
                android:textColor="@color/light_blue"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/department_subheading4"
                tools:ignore="TextContrastCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>